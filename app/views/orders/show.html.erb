<section class="orders-show">

  <header class="page-header">
    <h1>Your Order</h1>
    <h4> <% if current_user %>
      Thank you <%= current_user.email %>
      <% end %>
    </h4>
    <h4>Your order id is <%= @order.id %> </h4>
  </header>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order_total = 0 %>
        <% @order.line_items.each do |details| %>
          <%= render 'order', details: details %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= @order_total %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

</section>
